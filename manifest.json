{
  "name": "WebVR Navigator",
  "short_name": "WebVR Nav",
  "description": "A Chrome extension that allows you to seamlessly navigate between WebVR pages without taking off a headset.",
  "manifest_version": 2,
  "version": "1.0.0",
  "minimum_chrome_version": "10.0",
  "browser_action": {
    "default_icon": {
      "38": "images/icons/icon_38.png"
    },
    "default_popup": "",
    "default_title": ""
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js",
      "common.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "polyfill.js",
        "content-script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "polyfill.js"
  ]
}
